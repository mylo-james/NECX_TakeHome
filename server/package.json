{
  "name": "todo_backend",
  "version": "0.1.0",
  "main": "index.ts",
  "scripts": {
    "start": "NODE_ENV=production ts-node index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --single-quote --check .",
    "prepare": "cd ../ && husky install server/.husky",
    "dev": "NODE_ENV=development DB_URI=mongodb://localhost:27017 nodemon --exec ts-node -- index.ts",
    "seed": "NODE_ENV=development DB_URI=mongodb://localhost:27017 node db/seed.mjs",
    "build": "tsc"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "faker": "^6.6.6",
    "faker-js": "^1.0.0",
    "mongodb": "^4.13.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@types/bcryptjs": "^2.4.5",
    "@types/cookie-parser": "^1.4.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/faker": "^6.6.9",
    "@types/node": "^20.8.10",
    "eslint": "^8.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --write",
      "eslint --fix"
    ]
  }
}
